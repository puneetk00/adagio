<?xml version="1.0" ?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget class="ET\Instagram\Block\Instagramwidget" id="et_instagram_instagramwidget">
        <label>ET Instagram Widget</label>
        <description></description>
        <parameters>
            <parameter name="title" sort_order="10" visible="true" xsi:type="text">
                <label>Title</label>
            </parameter>
            <parameter name="image_count" sort_order="15" visible="true" xsi:type="text">
                <label>Image Count</label>
                <description>The maximum number is 20.</description>
            </parameter>
            <parameter name="image_width" sort_order="16" visible="true" xsi:type="text">
                <label>Image Width (auto/px)</label>
                <description>E.g: auto or 200px</description>
            </parameter>
            <parameter name="image_height" sort_order="17" visible="true" xsi:type="text">
                <label>Image Height (auto/px)</label>
                <description>E.g: auto or 200px</description>
            </parameter>
            <parameter name="show_caption" sort_order="20" xsi:type="select" visible="true" source_model="Magento\Config\Model\Config\Source\Yesno">
                <label translate="true">Show Caption</label>
            </parameter>
            <parameter name="enable_slider" sort_order="25" xsi:type="select" visible="true" source_model="Magento\Config\Model\Config\Source\Yesno">
                <label translate="true">Enable Slider ?</label>
            </parameter>
            <parameter name="nav" sort_order="30" xsi:type="select" visible="true" source_model="Magento\Config\Model\Config\Source\Yesno">
                <label translate="true">Show Navigation Buttons?</label>
                <depends>
                    <parameter name="enable_slider" value="1" />
                </depends>
            </parameter>
            <parameter name="dots" sort_order="35" xsi:type="select" visible="true" source_model="Magento\Config\Model\Config\Source\Yesno">
                <label translate="true">Show Dots?</label>
                <depends>
                    <parameter name="enable_slider" value="1" />
                </depends>
            </parameter>
            <parameter name="autoplay" sort_order="40" xsi:type="select" visible="true" source_model="Magento\Config\Model\Config\Source\Yesno">
                <label translate="true">Autoplay?</label>
                <depends>
                    <parameter name="enable_slider" value="1" />
                </depends>
            </parameter>
            <parameter name="stoponhover" sort_order="65" xsi:type="select" visible="true" source_model="Magento\Config\Model\Config\Source\Yesno">
                <label translate="true">Stop on Hover?</label>
                <depends>
                    <parameter name="enable_slider" value="1" />
                </depends>
            </parameter>
            <parameter name="loop" sort_order="70" xsi:type="select" visible="true" source_model="Magento\Config\Model\Config\Source\Yesno">
                <label translate="true">Enable Loop?</label>
                <depends>
                    <parameter name="enable_slider" value="1" />
                </depends>
            </parameter>
            <parameter name="mousedrag" sort_order="75" xsi:type="select" visible="true" source_model="Magento\Config\Model\Config\Source\Yesno">
                <label translate="true">Mouse Drag?</label>
                <depends>
                    <parameter name="enable_slider" value="1" />
                </depends>
            </parameter>
            <parameter name="touchdrag" sort_order="80" xsi:type="select" visible="true" source_model="Magento\Config\Model\Config\Source\Yesno">
                <label translate="true">Touch Drag?</label>
                <depends>
                    <parameter name="enable_slider" value="1" />
                </depends>
            </parameter>
        </parameters>
    </widget>
    <widget class="ET\Instagram\Block\Footerinstagram" id="et_instagram_footerinstagram">
        <label>ET Footer Column Instagram Widget</label>
        <description></description>
        <parameters>
            <parameter name="title" sort_order="10" visible="true" xsi:type="text">
                <label>Title</label>
            </parameter>
            <parameter name="image_count" sort_order="15" visible="true" xsi:type="text">
                <label>Image Count</label>
                <description>The maximum number is 20.</description>
            </parameter>
        </parameters>
    </widget>
</widgets>