<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">promotionbar_form.promotionbar_form_data_source</item>
            <item name="deps" xsi:type="string">promotionbar_form.promotionbar_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">General Information</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">promotionbar_form</item>
        </item>
        <item name="spinner" xsi:type="string">general_information</item>
        <item name="buttons" xsi:type="array">
            <item name="back" xsi:type="string">ET\Promotionbar\Block\Adminhtml\Index\Edit\Button\Back</item>
            <item name="delete" xsi:type="string">ET\Promotionbar\Block\Adminhtml\Index\Edit\Button\Delete</item>
            <item name="reset" xsi:type="string">ET\Promotionbar\Block\Adminhtml\Index\Edit\Button\Reset</item>
            <item name="save" xsi:type="string">ET\Promotionbar\Block\Adminhtml\Index\Edit\Button\Save</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <dataSource name="promotionbar_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">ET\Promotionbar\Model\DataProvider</argument>
            <argument name="name" xsi:type="string">promotionbar_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="submit_url" xsi:type="url" path="*/*/save" />
                </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>
    <fieldset name="general_information">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="collapsible" xsi:type="boolean">false</item>
                <item name="label" xsi:type="string" translate="true">General Information</item>
                <item name="sortOrder" xsi:type="number">10</item>
            </item>
        </argument>
        <field name="status">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">10</item>
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="label" xsi:type="string" translate="true">Status</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="number">1</item>
                        <item name="false" xsi:type="number">0</item>
                    </item>
                    <item name="valuesForOptions" xsi:type="array">
                        <item name="boolean" xsi:type="string">boolean</item>
                    </item>
                    <item name="default" xsi:type="number">1</item>
                    <item name="dataScope" xsi:type="string">status</item>
                </item>
            </argument>
        </field>
        <field name="promo_style" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">block</item>
                </item>
            </argument>
            <settings>
                <dataType>int</dataType>
                <label translate="true">Promo Style</label>
                <dataScope>promo_style</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="ET\Promotionbar\Model\Promotion\Source\PromoStyle"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="promo_text">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Promo Text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">promo_text</item>
                    <item name="dataScope" xsi:type="string">promo_text</item>
                </item>
            </argument>
        </field>
        <field name="backcolor">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Background Color</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">backcolor</item>
                    <item name="dataScope" xsi:type="string">backcolor</item>
                </item>
            </argument>
        </field>
        <field name="textcolor">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Text Color</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">textcolor</item>
                    <item name="dataScope" xsi:type="string">textcolor</item>
                </item>
            </argument>
        </field>
        <field name="start_date" formElement="date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">block</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="validate-date" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Start Date</label>
                <dataScope>start_date</dataScope>
            </settings>
        </field>
        <field name="end_date" formElement="date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="validate-date" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">End Date</label>
                <dataScope>end_date</dataScope>
            </settings>
        </field>
        <field name="storeviews" formElement="multiselect">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">block</item>
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>int</dataType>
                <label translate="true">Store View</label>
                <dataScope>store_id</dataScope>
            </settings>
            <formElements>
                <multiselect>
                    <settings>
                        <options class="ET\Promotionbar\Ui\Component\Listing\Column\Promotion\Options"/>
                    </settings>
                </multiselect>
            </formElements>
        </field>
        <field name="sort_order">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Sort Order</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">sort_order</item>
                    <item name="dataScope" xsi:type="string">sort_order</item>
                </item>
            </argument>
        </field>
    </fieldset>
    <fieldset name="button_information">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="label" xsi:type="string" translate="true">Button Settings</item>
                <item name="sortOrder" xsi:type="number">20</item>
            </item>
        </argument>
        <field name="btn_enable">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="label" xsi:type="string" translate="true">Enable Button</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="number">1</item>
                        <item name="false" xsi:type="number">0</item>
                    </item>
                    <item name="valuesForOptions" xsi:type="array">
                        <item name="boolean" xsi:type="string">boolean</item>
                    </item>
                    <item name="default" xsi:type="number">0</item>
                    <item name="dataScope" xsi:type="string">btn_enable</item>
                </item>
            </argument>
        </field>
        <field name="btn_style" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">block</item>
                </item>
            </argument>
            <settings>
                <dataType>int</dataType>
                <label translate="true">Button Style</label>
                <dataScope>btn_style</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="ET\Promotionbar\Model\Promotion\Source\ButtonStyle"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="btn_text">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Button Text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">btn_text</item>
                    <item name="dataScope" xsi:type="string">btn_text</item>
                </item>
            </argument>
        </field>
        <field name="btn_url">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Button URL</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">btn_url</item>
                    <item name="dataScope" xsi:type="string">btn_url</item>
                </item>
            </argument>
        </field>
        <field name="btn_target" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">block</item>
                </item>
            </argument>
            <settings>
                <dataType>int</dataType>
                <label translate="true">Target</label>
                <dataScope>btn_target</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="ET\Promotionbar\Model\Promotion\Source\UrlTarget"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="btn_backcolor">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Button Background Color</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">btn_backcolor</item>
                    <item name="dataScope" xsi:type="string">btn_backcolor</item>
                </item>
            </argument>
        </field>
        <field name="btn_textcolor">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Button Text Color</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">btn_textcolor</item>
                    <item name="dataScope" xsi:type="string">btn_textcolor</item>
                </item>
            </argument>
        </field>
    </fieldset>
    <fieldset name="newsletter_information">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="label" xsi:type="string" translate="true">Newsletter Settings</item>
                <item name="sortOrder" xsi:type="number">30</item>
            </item>
        </argument>
        <field name="sub_enable">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="label" xsi:type="string" translate="true">Enable Newsletter Subscribe Form</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="number">1</item>
                        <item name="false" xsi:type="number">0</item>
                    </item>
                    <item name="valuesForOptions" xsi:type="array">
                        <item name="boolean" xsi:type="string">boolean</item>
                    </item>
                    <item name="default" xsi:type="number">0</item>
                    <item name="dataScope" xsi:type="string">sub_enable</item>
                </item>
            </argument>
        </field>
        <field name="sub_text_placeholder">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">TextBox Placeholder Text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">sub_text_placeholder</item>
                    <item name="dataScope" xsi:type="string">sub_text_placeholder</item>
                </item>
            </argument>
        </field>
        <field name="sub_btn_text">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Button Text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">sub_btn_text</item>
                    <item name="dataScope" xsi:type="string">sub_btn_text</item>
                </item>
            </argument>
        </field>
        <field name="sub_btn_backcolor">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Background Color</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">sub_btn_backcolor</item>
                    <item name="dataScope" xsi:type="string">sub_btn_backcolor</item>
                </item>
            </argument>
        </field>
        <field name="sub_btn_textcolor">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Text Color</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">sub_btn_textcolor</item>
                    <item name="dataScope" xsi:type="string">sub_btn_textcolor</item>
                </item>
            </argument>
        </field>
    </fieldset>
    <fieldset name="timer_information">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="label" xsi:type="string" translate="true">Timer Settings</item>
                <item name="sortOrder" xsi:type="number">40</item>
            </item>
        </argument>
        <field name="timer_enable">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="label" xsi:type="string" translate="true">Enable Timer</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="number">1</item>
                        <item name="false" xsi:type="number">0</item>
                    </item>
                    <item name="valuesForOptions" xsi:type="array">
                        <item name="boolean" xsi:type="string">boolean</item>
                    </item>
                    <item name="default" xsi:type="number">0</item>
                    <item name="dataScope" xsi:type="string">timer_enable</item>
                </item>
            </argument>
        </field>
        <field name="timer_enddate" formElement="date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">block</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="validate-date" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Timer End Date</label>
                <dataScope>timer_enddate</dataScope>
            </settings>
        </field>
    </fieldset>
</form>