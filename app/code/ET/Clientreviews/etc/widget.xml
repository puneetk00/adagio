<?xml version="1.0"?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Magento/Widget/etc/widget.xsd">
    <widget id="et_clientreviews" class="ET\Clientreviews\Block\Clientreviews">
        <label translate="true">Client Reviews</label>
        <description>Client Reviews</description>
        <parameters>
            <parameter name="demo_version" xsi:type="select" required="true" source_model="ET\Clientreviews\Model\Config\Demoversion" visible="true" sort_order="1" >
                <label translate="true">Demo Version</label>
            </parameter>
            <parameter name="title" sort_order="5" xsi:type="text" required="true" visible="true">
                <label translate="true">Title</label>
            </parameter>
            <parameter name="reviews_count" sort_order="10" xsi:type="text" required="true" visible="true">
                <label translate="true">Number of Reviews to Display</label>
                <value>5</value>
            </parameter>
            <parameter name="designation" sort_order="15" xsi:type="select" visible="true" source_model="Magento\Config\Model\Config\Source\Yesno">
                <label translate="true">Display Designation</label>                
            </parameter>
            <parameter name="location" sort_order="20" xsi:type="select" visible="true" source_model="Magento\Config\Model\Config\Source\Yesno">
                <label translate="true">Display Client Location</label>
            </parameter>
            <parameter name="socials" sort_order="25" xsi:type="select" visible="true" source_model="Magento\Config\Model\Config\Source\Yesno">
                <label translate="true">Enable Social Icons</label>
            </parameter>
            <parameter name="autoplay" sort_order="30" xsi:type="select" visible="true" source_model="Magento\Config\Model\Config\Source\Yesno">
                <label translate="true">Autoplay?</label>
            </parameter>
            <parameter name="dots" sort_order="35" xsi:type="select" visible="true" source_model="Magento\Config\Model\Config\Source\Yesno">
                <label translate="true">Enable Nav Dots?</label>
            </parameter>
            <parameter name="nav" sort_order="40" xsi:type="select" visible="true" source_model="Magento\Config\Model\Config\Source\Yesno">
                <label translate="true">Enable Nav Arrows?</label>
            </parameter>
            <parameter name="stoponhover" sort_order="45" xsi:type="select" visible="true" source_model="Magento\Config\Model\Config\Source\Yesno">
                <label translate="true">Stop on Hover?</label>
            </parameter>
            <parameter name="loop" sort_order="50" xsi:type="select" visible="true" source_model="Magento\Config\Model\Config\Source\Yesno">
                <label translate="true">Enable Loop?</label>
            </parameter>
            <parameter name="mousedrag" sort_order="55" xsi:type="select" visible="true" source_model="Magento\Config\Model\Config\Source\Yesno">
                <label translate="true">Mouse Drag?</label>
            </parameter>
            <parameter name="touchdrag" sort_order="60" xsi:type="select" visible="true" source_model="Magento\Config\Model\Config\Source\Yesno">
                <label translate="true">Touch Drag?</label>
            </parameter>
        </parameters>
    </widget>
</widgets>