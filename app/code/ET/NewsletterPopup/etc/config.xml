<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <addonnewspopup>
            <settings>
                <enabled>1</enabled>
                <use_ajax>1</use_ajax>
                <enable_homepage>1</enable_homepage>
                <popup_delay>1</popup_delay>
                <popup_title>Newsletter</popup_title>
                <template_mode>0</template_mode>
                <demo_layout>2</demo_layout>
                <popup_custom_text></popup_custom_text>
                <popup_text><![CDATA[<h3>Subscribe Now!</h3>
<p class="nw-text">And get exclusive discounts, special offers and new theme launches right in your inbox.</p>
<h2>YourStore</h2>
<div class="nw-form">
    {{block class="ET\NewsletterPopup\Block\Subscribe" name="newsletter-form" template="ET_NewsletterPopup::newsletter/form.phtml"}}
</div>
<div class="nw-checkbox">
    <input type="checkbox" id="nw-checked" name="nw-checked" />
    <label for="nw-checked">Don't show this popup again!</label>
</div>]]></popup_text>
                <popup_dimension>1</popup_dimension>
                <popup_width>500px</popup_width>
                <popup_height>auto</popup_height>
                <custom_css></custom_css>
            </settings>
        </addonnewspopup>
    </default>
</config>