<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="product.info.media">
            <block class="Magento\Catalog\Block\Product\View" name="product.sizechart" template="ET_Sizechart::product/view/sizechart.phtml" after="-"/>
        </referenceContainer>
        <referenceBlock name="product.info.details">
            <block class="Magento\Catalog\Block\Product\View" name="sizechart.tab" as="sizechart.tab" template="ET_Sizechart::product/view/tab/sizechart.phtml" group="detailed_info" after="reviews.tab">
                <arguments>
                    <argument name="title" translate="true" xsi:type="string">Size Chart</argument>
                    <argument name="sort_order" xsi:type="string">30</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceContainer name="head.additional">
            <block class="Magento\Catalog\Block\Product\View" name="sizechart.head" template="ET_Sizechart::product/view/head.phtml" before="-" />
        </referenceContainer>
    </body>
</page>